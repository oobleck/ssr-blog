---
const {url} = Astro;
const accessKey = 'a59b24ed-bb73-4bb6-8cb0-fb57a5f8f3f1';
const action = 'https://api.web3forms.com/submit';
---

<form name="contact" method="POST" {action}>
  <sl-input type="text" id="name" required label="Name" placeholder="Wanda Jones"></sl-input>
  <sl-input label="Email Address" placeholder="you@yourdomain.com" id="email" name="email" type="email" required></sl-input>
  <sl-textarea label="Message" placeholder="What's on your mind?" name="message" id="message" required></sl-textarea>
  <sl-button variant="primary" type="submit">Send</sl-button>
  <sl-button type="reset">Reset</sl-button>
  <input type="hidden" name="redirect" value={`${url.origin}/thanks`} />
  <input type="hidden" name="access_key" value={accessKey}>
</form>

