---
interface Props {
  start: string | Date;
  end?: string | Date;
}

function formatDate(date: Date | string): string {
  return new Date(date).toLocaleDateString("en-US", { year: 'numeric', month: 'short' });
}

const { start, end } = Astro.props;
const startDate = formatDate(start);
const endDate = end ? formatDate(end) : 'Present';
---

<aside class="dates-range">
  <time class="dt-start" datetime={startDate} class="start">{startDate}</time>
  â€“
  <time class="dt-end" datetime={endDate ?? new Date()} class="end"
    >{endDate}</time
  >
</aside>

<style>
  .dates-range {
    border: initial;
    margin: initial;
    padding: initial;
    /* display: inline-flex; */
    /* gap: 0.5ch; */

    > * {
      display: inline-block;
      margin-block-end: 0.5ch;
    }
  }
</style>
