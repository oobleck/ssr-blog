---
import Layout from "../layouts/Layout.astro";
import PostList from "../components/PostList.astro";
import AboutMe from "../components/AboutMe.astro";
import { settings } from "../data/settings";

const isDevMode = false && Astro.url.hostname.includes('localhost');
---

<Layout level="primary" title="Home" searchable={false}>
  <div class="container">
    <h1>{ settings.title }</h1>
    <AboutMe intro={true} label={false} readmore={true} />

    <h2>Recent Posts</h2>
    <PostList limit={4} cards={false} includeDrafts={isDevMode} />
  </div>
</Layout>
