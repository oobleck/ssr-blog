{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "strictNullChecks": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@assets/*": [
        "./assets/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@content/*": [
        "./content/*"
      ],
      "@layouts/*": [
        "./layouts/*"
      ],
      "@styles/*": [
        "./styles/*"
      ],
      "@data/*": [
        "./data/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@pub/*": [
        "../public/*"
      ]
    },
    "jsx": "preserve"
  }
}
